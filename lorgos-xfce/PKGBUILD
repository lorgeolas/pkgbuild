pkgname=lorgos-xfce-git
_pkgname=lorgos-xfce
_destname1="/etc/skel/.config/Thunar/"
_destname2="/etc/skel/.config/xfce4/"
_destname3="/etc/skel/.config/autostart/"
_licensedir="/usr/share/lorgos/licenses/"
pkgver=25.06
pkgrel=02
pkgdesc="Desktop configuration for LorgOS"
arch=('any')
url="https://github.com/lorgeolas/lorgos-xfce"
license=('GPL3')
makedepends=('git')
depends=()
conflicts=()
#provides=("${pkgname}")
options=(!strip !emptydirs)
source=(${_pkgname}::"git+https://github.com/lorgeolas/${_pkgname}.git")
sha256sums=('SKIP')
install='readme.install'
package() {
	mkdir -p "${pkgdir}${_licensedir}${_pkgname}"
	mv "${srcdir}/${_pkgname}/"LICENSE "${pkgdir}${_licensedir}${_pkgname}/LICENSE"
	mkdir -p "${pkgdir}${_destname1}"
	cp -r "${srcdir}/${_pkgname}/${_destname1}/"* "${pkgdir}${_destname1}"
	mkdir -p "${pkgdir}${_destname2}"
	cp -r "${srcdir}/${_pkgname}/${_destname2}/"* "${pkgdir}${_destname2}"
	mkdir -p "${pkgdir}${_destname3}"
	cp -r "${srcdir}/${_pkgname}/${_destname3}/"* "${pkgdir}${_destname3}"
}
