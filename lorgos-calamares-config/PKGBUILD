pkgname=lorgos-calamares-config
_pkgname=lorgos-calamares-config
_destname1="/etc"
_destnamescript="/usr/bin"
pkgver=25.10
pkgrel=05
pkgdesc="calamares config for LorgOS"
arch=('any')
url="https://github.com/lorgeolas/${_pkgname}"
license=('GPL3')
makedepends=('git')
depends=()
provides=("${pkgname}")
options=(!strip !emptydirs)
source=(${_pkgname}::"git+$url")
sha256sums=('SKIP')
install='readme.install'
package() {
	mkdir -p "${pkgdir}${_destname1}"
	cp -r "${srcdir}/${_pkgname}/${_destname1}"* "${pkgdir}"
	mkdir -p "${pkgdir}${_destnamescript}"
}
